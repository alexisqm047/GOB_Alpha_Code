@page
@model GOB.AppFrontend.Pages.SecretariosModel
@{
}
<style>
h1 {text-align: center;}
p {text-align: center;}
div {text-align: center;}
</style>
<style>
table, tr, th, td {
  border: 1px solid white;
  border-collapse: collapse;
}
th, td {
  background-color: #96D4D4;
}
</style>
<h1>Lista secretarios de despacho</h1>
<table style="width:100%"> 
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Edad</th>
    <th>Identificacion</th>
    <th>Despacho</th>
    <th>Estado de salud</th>
    @foreach (var secretarios in Model.Secretarios)
    {   
        
        <tr>
            <td>@secretarios.nombre</td>
            <td>@secretarios.apellido</td>
            <td>@secretarios.edad</td>
            <td>@secretarios.identificacion</td>
            <td>@secretarios.despacho</td>
            <td>@secretarios.estadoSalud</td>
            <td>
              <a class="btn btn-primary table-btn" asp-page="/Listas/DetallesSecretario" asp-route-secretarioId="@secretarios.id">
                <i class="fas fa-info-circle" aria-hidden="true"></i></a>
            </td>
            <td>
              <a class="btn btn-secondary table-btn" asp-page="/Listas/EditarSecretario" asp-route-secretarioId="@secretarios.id">
                <i class="fas fa-address-book"></i></a>

            </td>
            <td>
              <a class="btn btn-danger table-btn" asp-page="/Listas/EliminarSecretario" asp-route-secretarioId="@secretarios.id">
                <i class="fas fa-book-dead"></i></a>
            </td>            
        </tr>        
    }
</table>
<a asp-page="/Listas/EditarSecretario" class="btn btn-primary table-btn">Adicionar Secretario</a>


