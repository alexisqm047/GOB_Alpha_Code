@page
@model GOB.AppFrontend.Pages.GobernadoresModel
@{
}
<style>
h1 {text-align: center;}
p {text-align: center;}
div {text-align: center;}
</style>
<style>
table, tr, th, td {
  border: 1px solid white;
  border-collapse: collapse;
}
th, td {
  background-color: #96D4D4;
}
</style>
<h1>Lista Gobernadores</h1>
<table style="width:100%"> 
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Edad</th>
    <th>Identificacion</th>
    <th>Estado de salud</th>
    @foreach (var gobernadores in Model.Gobernadores)
    {   
        
        <tr>
            <td>@gobernadores.nombre</td>
            <td>@gobernadores.apellido</td>
            <td>@gobernadores.edad</td>
            <td>@gobernadores.identificacion</td>
            <td>@gobernadores.estadoSalud</td>            
            <td>
              <a class="btn btn-primary table-btn" asp-page="/Listas/DetallesGobernador" asp-route-gobernadorId="@gobernadores.id">
              <i class="fas fa-info-circle" aria-hidden="true"></i></a>
            </td>
            <td>
              <a class="btn btn-secondary table-btn" asp-page="/Listas/EditarGobernador" asp-route-gobernadorId="@gobernadores.id">
              <i class="fas fa-address-book" aria-hidden="true"></i></a>

            </td>
            <td>
              <a class="btn btn-danger table-btn" asp-page="/Listas/EliminarGobernador" asp-route-gobernadorId="@gobernadores.id">
              <i class="fas fa-book-dead" aria-hidden="true"></i></a>
            </td>
        </tr>
        
    }
</table>
<a asp-page="/Listas/EditarGobernador" class="btn btn-primary table-btn">Adicionar Gobernador</a>